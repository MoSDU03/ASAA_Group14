<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>// ===== GLOBAL DECLARATIONS =====

// Channels for synchronization
chan can_detected;
chan position_valid;
chan fill_complete;
chan seal_complete;
chan quality_pass;
chan quality_fail;
chan emergency_shutdown;
chan fault_detected;
chan reset_cycle;

// System modes
typedef int[0,2] SystemMode;
const SystemMode NORMAL = 0;
const SystemMode DEGRADED = 1;
const SystemMode SAFE = 2;

SystemMode system_mode = NORMAL;

// Global variables
int fill_level = 0;
const int TARGET_VOLUME = 330;
const int VOLUME_TOLERANCE = 5;
bool can_present = false;
bool valve_open = false;
bool seal_applied = false;
bool position_confirmed = false;

// Timing constants (all in milliseconds)
const int FILL_TIMEOUT = 3000;
const int VALVE_CLOSE_MAX = 50;
const int SEAL_HOLD_TIME = 500;
const int FAULT_DETECT_MAX = 200;
const int EMERGENCY_MAX = 50;
const int SENSOR_POLL_INTERVAL = 100;
const int MIN_CYCLE_TIME = 600;
const int MAX_CYCLE_TIME = 1500;
	</declaration>
	<template>
		<name>SensorCollector</name>
		<declaration>// Local clock for sensor polling
clock sensor_clock;</declaration>
		<location id="id0" x="-340" y="-76">
			<name x="-350" y="-110">Idle</name>
		</location>
		<location id="id1" x="-136" y="-76">
			<name x="-146" y="-110">Polling</name>
			<label kind="invariant" x="-146" y="-59">sensor_clock &lt;= SENSOR_POLL_INTERVAL</label>
		</location>
		<location id="id2" x="68" y="-76">
			<name x="58" y="-110">ValidatingPosition</name>
		</location>
		<location id="id3" x="-136" y="68">
			<name x="-146" y="85">DetectingFault</name>
			<label kind="invariant" x="-146" y="102">sensor_clock &lt;= FAULT_DETECT_MAX</label>
		</location>
		<location id="id4" x="-340" y="68">
			<name x="-350" y="85">FaultActive</name>
		</location>
		<init ref="id0"/>
		<transition id="id5">
			<source ref="id4"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="-331" y="-17">reset_cycle?</label>
			<nail x="-340" y="0"/>
		</transition>
		<transition id="id6">
			<source ref="id3"/>
			<target ref="id4"/>
			<label kind="guard" x="-289" y="51">sensor_clock &gt;= FAULT_DETECT_MAX</label>
			<label kind="synchronisation" x="-289" y="68">fault_detected!</label>
		</transition>
		<transition id="id7">
			<source ref="id1"/>
			<target ref="id3"/>
			<label kind="guard" x="-127" y="-25">!can_present</label>
		</transition>
		<transition id="id8">
			<source ref="id2"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="-51" y="-119">reset_cycle?</label>
			<label kind="assignment" x="-51" y="-102">position_confirmed = false</label>
			<nail x="68" y="-144"/>
			<nail x="-340" y="-144"/>
		</transition>
		<transition id="id9">
			<source ref="id2"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="119" y="-102">position_valid!</label>
			<label kind="assignment" x="119" y="-85">position_confirmed = true</label>
			<nail x="102" y="-102"/>
			<nail x="102" y="-51"/>
		</transition>
		<transition id="id10">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="-85" y="-93">can_present</label>
		</transition>
		<transition id="id11">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="-297" y="-93">can_detected?</label>
			<label kind="assignment" x="-297" y="-76">sensor_clock = 0,
can_present = true</label>
		</transition>
	</template>
	<template>
		<name>FillController</name>
		<declaration>// Local clock for fill operations
clock fill_clock;
clock valve_clock;</declaration>
		<location id="id12" x="-340" y="-76">
			<name x="-350" y="-110">Idle</name>
		</location>
		<location id="id13" x="-136" y="-76">
			<name x="-146" y="-110">WaitingPosition</name>
		</location>
		<location id="id14" x="68" y="-76">
			<name x="58" y="-110">Filling</name>
			<label kind="invariant" x="58" y="-93">fill_clock &lt;= FILL_TIMEOUT</label>
		</location>
		<location id="id15" x="272" y="-76">
			<name x="262" y="-110">ClosingValve</name>
			<label kind="invariant" x="262" y="-93">valve_clock &lt;= VALVE_CLOSE_MAX</label>
		</location>
		<location id="id16" x="476" y="-76">
			<name x="466" y="-110">Complete</name>
		</location>
		<location id="id17" x="68" y="68">
			<name x="58" y="85">FillTimeout</name>
		</location>
		<init ref="id12"/>
		<transition id="id18">
			<source ref="id16"/>
			<target ref="id12"/>
			<label kind="synchronisation" x="340" y="-229">reset_cycle!</label>
			<label kind="assignment" x="340" y="-212">valve_open = false,
fill_level = 0,
can_present = false</label>
			<nail x="476" y="-212"/>
			<nail x="-340" y="-212"/>
		</transition>
		<transition id="id19">
			<source ref="id17"/>
			<target ref="id12"/>
			<label kind="synchronisation" x="-42" y="153">reset_cycle!</label>
			<label kind="assignment" x="-42" y="170">valve_open = false,
fill_level = 0</label>
			<nail x="68" y="136"/>
			<nail x="-340" y="136"/>
		</transition>
		<transition id="id20">
			<source ref="id15"/>
			<target ref="id16"/>
			<label kind="guard" x="314" y="-93">valve_clock &gt;= VALVE_CLOSE_MAX</label>
			<label kind="synchronisation" x="314" y="-76">fill_complete!</label>
			<label kind="assignment" x="314" y="-59">valve_open = false</label>
		</transition>
		<transition id="id21">
			<source ref="id14"/>
			<target ref="id15"/>
			<label kind="guard" x="110" y="-93">fill_level &gt;= (TARGET_VOLUME - VOLUME_TOLERANCE)</label>
			<label kind="assignment" x="110" y="-76">valve_clock = 0</label>
		</transition>
		<transition id="id22">
			<source ref="id14"/>
			<target ref="id17"/>
			<label kind="guard" x="25" y="-25">fill_clock &gt;= FILL_TIMEOUT</label>
		</transition>
		<transition id="id23">
			<source ref="id14"/>
			<target ref="id14"/>
			<label kind="guard" x="119" y="-127">fill_level &lt; TARGET_VOLUME</label>
			<label kind="assignment" x="119" y="-110">fill_level = fill_level + 10</label>
			<nail x="102" y="-102"/>
			<nail x="102" y="-51"/>
		</transition>
		<transition id="id24">
			<source ref="id13"/>
			<target ref="id14"/>
			<label kind="synchronisation" x="-85" y="-93">position_valid?</label>
			<label kind="assignment" x="-85" y="-76">fill_clock = 0,
valve_open = true,
fill_level = 0</label>
		</transition>
		<transition id="id25">
			<source ref="id12"/>
			<target ref="id13"/>
			<label kind="synchronisation" x="-297" y="-93">can_detected!</label>
		</transition>
	</template>
	<template>
		<name>SealController</name>
		<declaration>// Local clock for seal operations
clock seal_clock;</declaration>
		<location id="id26" x="-136" y="-76">
			<name x="-146" y="-110">Idle</name>
		</location>
		<location id="id27" x="68" y="-76">
			<name x="58" y="-110">ApplyingSeal</name>
			<label kind="invariant" x="58" y="-93">seal_clock &lt;= SEAL_HOLD_TIME</label>
		</location>
		<location id="id28" x="272" y="-76">
			<name x="262" y="-110">VerifyingSeal</name>
		</location>
		<init ref="id26"/>
		<transition id="id29">
			<source ref="id28"/>
			<target ref="id26"/>
			<label kind="synchronisation" x="25" y="-187">reset_cycle?</label>
			<label kind="assignment" x="25" y="-170">seal_applied = false</label>
			<nail x="272" y="-144"/>
			<nail x="-136" y="-144"/>
		</transition>
		<transition id="id30">
			<source ref="id28"/>
			<target ref="id28"/>
			<label kind="synchronisation" x="323" y="-102">seal_complete!</label>
			<nail x="306" y="-102"/>
			<nail x="306" y="-51"/>
		</transition>
		<transition id="id31">
			<source ref="id27"/>
			<target ref="id28"/>
			<label kind="guard" x="110" y="-93">seal_clock &gt;= SEAL_HOLD_TIME</label>
			<label kind="assignment" x="110" y="-76">seal_applied = true</label>
		</transition>
		<transition id="id32">
			<source ref="id26"/>
			<target ref="id27"/>
			<label kind="synchronisation" x="-85" y="-93">fill_complete?</label>
			<label kind="assignment" x="-85" y="-76">seal_clock = 0</label>
		</transition>
	</template>
	<template>
		<name>QualityInspector</name>
		<declaration>// No local clocks needed</declaration>
		<location id="id33" x="-136" y="-76">
			<name x="-146" y="-110">Idle</name>
		</location>
		<location id="id34" x="68" y="-76">
			<name x="58" y="-110">Inspecting</name>
		</location>
		<location id="id35" x="272" y="-76">
			<name x="262" y="-110">Pass</name>
		</location>
		<location id="id36" x="68" y="68">
			<name x="58" y="85">Fail</name>
		</location>
		<init ref="id33"/>
		<transition id="id37">
			<source ref="id36"/>
			<target ref="id33"/>
			<label kind="synchronisation" x="-42" y="51">quality_fail!</label>
			<nail x="-136" y="68"/>
		</transition>
		<transition id="id38">
			<source ref="id35"/>
			<target ref="id33"/>
			<label kind="synchronisation" x="25" y="-187">quality_pass!</label>
			<nail x="272" y="-144"/>
			<nail x="-136" y="-144"/>
		</transition>
		<transition id="id39">
			<source ref="id34"/>
			<target ref="id36"/>
			<label kind="guard" x="17" y="-25">fill_level &lt; (TARGET_VOLUME - VOLUME_TOLERANCE) ||
fill_level &gt; (TARGET_VOLUME + VOLUME_TOLERANCE) ||
!seal_applied</label>
		</transition>
		<transition id="id40">
			<source ref="id34"/>
			<target ref="id35"/>
			<label kind="guard" x="110" y="-93">fill_level &gt;= (TARGET_VOLUME - VOLUME_TOLERANCE) &amp;&amp;
fill_level &lt;= (TARGET_VOLUME + VOLUME_TOLERANCE) &amp;&amp;
seal_applied</label>
		</transition>
		<transition id="id41">
			<source ref="id33"/>
			<target ref="id34"/>
			<label kind="synchronisation" x="-85" y="-93">seal_complete?</label>
		</transition>
	</template>
	<template>
		<name>FaultHandler</name>
		<declaration>// Local clock for fault response
clock fault_clock;</declaration>
		<location id="id42" x="-136" y="-76">
			<name x="-146" y="-110">Normal</name>
		</location>
		<location id="id43" x="68" y="-76">
			<name x="58" y="-110">DegradedMode</name>
		</location>
		<location id="id44" x="272" y="-76">
			<name x="262" y="-110">SafeMode</name>
			<label kind="invariant" x="262" y="-59">valve_open == false</label>
		</location>
		<location id="id45" x="68" y="68">
			<name x="58" y="85">EmergencyShutdown</name>
			<label kind="invariant" x="58" y="102">fault_clock &lt;= EMERGENCY_MAX</label>
		</location>
		<init ref="id42"/>
		<transition id="id46">
			<source ref="id44"/>
			<target ref="id42"/>
			<label kind="synchronisation" x="25" y="-187">reset_cycle?</label>
			<label kind="assignment" x="25" y="-170">system_mode = NORMAL</label>
			<nail x="272" y="-144"/>
			<nail x="-136" y="-144"/>
		</transition>
		<transition id="id47">
			<source ref="id45"/>
			<target ref="id44"/>
			<label kind="guard" x="110" y="51">fault_clock &gt;= EMERGENCY_MAX</label>
			<label kind="synchronisation" x="110" y="68">emergency_shutdown!</label>
			<label kind="assignment" x="110" y="85">system_mode = SAFE,
valve_open = false</label>
			<nail x="272" y="68"/>
		</transition>
		<transition id="id48">
			<source ref="id43"/>
			<target ref="id45"/>
			<label kind="synchronisation" x="25" y="-25">fault_detected?</label>
			<label kind="assignment" x="25" y="-8">fault_clock = 0</label>
		</transition>
		<transition id="id49">
			<source ref="id43"/>
			<target ref="id42"/>
			<label kind="synchronisation" x="-85" y="-161">reset_cycle?</label>
			<label kind="assignment" x="-85" y="-144">system_mode = NORMAL</label>
			<nail x="68" y="-144"/>
			<nail x="-136" y="-144"/>
		</transition>
		<transition id="id50">
			<source ref="id42"/>
			<target ref="id43"/>
			<label kind="synchronisation" x="-85" y="-93">fault_detected?</label>
			<label kind="assignment" x="-85" y="-76">system_mode = DEGRADED</label>
		</transition>
	</template>
	<template>
		<name>ProductionCycleTimer</name>
		<declaration>// Clock to measure complete production cycle
clock cycle_clock;</declaration>
		<location id="id51" x="-136" y="-76">
			<name x="-146" y="-110">WaitingForCan</name>
		</location>
		<location id="id52" x="68" y="-76">
			<name x="58" y="-110">Processing</name>
		</location>
		<location id="id53" x="272" y="-76">
			<name x="262" y="-110">CycleComplete</name>
			<label kind="invariant" x="262" y="-59">cycle_clock &lt;= MAX_CYCLE_TIME</label>
		</location>
		<init ref="id51"/>
		<transition id="id54">
			<source ref="id53"/>
			<target ref="id51"/>
			<label kind="synchronisation" x="25" y="-187">reset_cycle?</label>
			<nail x="272" y="-144"/>
			<nail x="-136" y="-144"/>
		</transition>
		<transition id="id55">
			<source ref="id52"/>
			<target ref="id53"/>
			<label kind="guard" x="110" y="-93">cycle_clock &gt;= MIN_CYCLE_TIME</label>
			<label kind="synchronisation" x="110" y="-76">quality_pass?</label>
		</transition>
		<transition id="id56">
			<source ref="id52"/>
			<target ref="id53"/>
			<label kind="synchronisation" x="110" y="-42">quality_fail?</label>
		</transition>
		<transition id="id57">
			<source ref="id51"/>
			<target ref="id52"/>
			<label kind="synchronisation" x="-85" y="-93">can_detected?</label>
			<label kind="assignment" x="-85" y="-76">cycle_clock = 0</label>
		</transition>
	</template>
	<system>// System instantiation
Sensors = SensorCollector();
Filler = FillController();
Sealer = SealController();
Inspector = QualityInspector();
Fault = FaultHandler();
Observer = ProductionCycleTimer();

system Sensors, Filler, Sealer, Inspector, Fault, Observer;
	</system>
	<queries>
		<query>
			<formula>A[] not deadlock</formula>
			<comment>System never deadlocks</comment>
			<result outcome="failure" type="quality" timestamp="2025-11-24 01:46:45 +0100">
			</result>
		</query>
		<query>
			<formula>A[] (Fault.EmergencyShutdown imply Fault.fault_clock &lt;= EMERGENCY_MAX)</formula>
			<comment>Emergency shutdown within 50ms</comment>
			<result outcome="success" type="quality" timestamp="2025-11-24 01:46:45 +0100">
			</result>
		</query>
		<query>
			<formula>A[] (system_mode == SAFE imply valve_open == false)</formula>
			<comment>Valve closed in safe mode</comment>
			<result outcome="success" type="quality" timestamp="2025-11-24 01:46:45 +0100">
			</result>
		</query>
		<query>
			<formula>A[] (Filler.Filling imply Filler.fill_clock &lt;= FILL_TIMEOUT)</formula>
			<comment>Fill timeout respected</comment>
			<result outcome="success" type="quality" timestamp="2025-11-24 01:46:45 +0100">
			</result>
		</query>
		<query>
			<formula>A[] (Filler.ClosingValve imply Filler.valve_clock &lt;= VALVE_CLOSE_MAX)</formula>
			<comment>Valve closes within 50ms</comment>
			<result outcome="success" type="quality" timestamp="2025-11-24 01:46:45 +0100">
			</result>
		</query>
		<query>
			<formula>E&lt;&gt; Observer.CycleComplete</formula>
			<comment>System can complete a cycle</comment>
			<result outcome="success" type="quality" timestamp="2025-11-24 01:46:45 +0100">
			</result>
		</query>
		<query>
			<formula>A[] (Observer.CycleComplete imply (Observer.cycle_clock &gt;= MIN_CYCLE_TIME and Observer.cycle_clock &lt;= MAX_CYCLE_TIME))</formula>
			<comment>Cycle time within bounds (600-1500ms)</comment>
			<result outcome="failure" type="quality" timestamp="2025-11-24 01:46:48 +0100">
			</result>
		</query>
		<query>
			<formula>A[] (Filler.Filling imply valve_open == true)</formula>
			<comment>Valve open during filling</comment>
			<result outcome="success" type="quality" timestamp="2025-11-24 01:46:45 +0100">
			</result>
		</query>
		<query>
			<formula>A[] (Inspector.Pass imply (fill_level &gt;= (TARGET_VOLUME - VOLUME_TOLERANCE) and fill_level &lt;= (TARGET_VOLUME + VOLUME_TOLERANCE)))</formula>
			<comment>Quality pass means correct fill level</comment>
			<result outcome="failure" type="quality" timestamp="2025-11-24 01:46:54 +0100">
			</result>
		</query>
		<query>
			<formula>A[] (Sealer.VerifyingSeal imply seal_applied == true)</formula>
			<comment>Seal applied before verification</comment>
			<result outcome="success" type="quality" timestamp="2025-11-24 01:46:45 +0100">
			</result>
		</query>
		<query>
			<formula>E&lt;&gt; Fault.SafeMode</formula>
			<comment>System can enter safe mode</comment>
			<result outcome="failure" type="quality" timestamp="2025-11-24 01:46:59 +0100">
			</result>
		</query>
		<query>
			<formula>A[] (Sensors.FaultActive imply system_mode != NORMAL)</formula>
			<comment>Fault detected triggers mode change</comment>
			<result outcome="success" type="quality" timestamp="2025-11-24 01:46:45 +0100">
			</result>
		</query>
		<query>
			<formula>A[] (Filler.FillTimeout imply Filler.fill_clock &gt;= FILL_TIMEOUT)</formula>
			<comment>Timeout only occurs after limit</comment>
			<result outcome="success" type="quality" timestamp="2025-11-24 01:46:45 +0100">
			</result>
		</query>
		<query>
			<formula>E&lt;&gt; Inspector.Fail</formula>
			<comment>System can detect failures</comment>
			<result outcome="success" type="quality" timestamp="2025-11-24 01:46:45 +0100">
			</result>
		</query>
		<query>
			<formula>A[] (Observer.Processing imply can_present == true)</formula>
			<comment>Processing only when can present</comment>
			<result outcome="failure" type="quality" timestamp="2025-11-24 01:47:03 +0100">
			</result>
		</query>
	</queries>
</nta>
